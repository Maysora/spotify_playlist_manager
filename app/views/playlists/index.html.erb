<!-- https://beta.developer.spotify.com/documentation/web-api/reference/playlists/get-a-list-of-current-users-playlists/ -->
<% content_for :kaminari_rel, rel_next_prev_link_tags(@playlists) %>
<%= paginate @playlists %>
<%= page_entries_info @playlists, entry_name: 'playlist' %>
<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>ID</th>
      <th>Name</th>
      <th>Tracks #</th>
      <th>Owner</th>
      <th>Flags</th>
      <th></th>
    </tr>
  </thead>
  <%= render partial: 'playlist', collection: @playlists %>
</table>
